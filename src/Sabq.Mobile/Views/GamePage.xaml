<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Sabq.Mobile.ViewModels"
             x:Class="Sabq.Mobile.Views.GamePage"
             x:DataType="vm:GameViewModel"
             FlowDirection="RightToLeft"
             Title="اللعبة"
             BackgroundColor="{StaticResource Background}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,*" Margin="0,0,0,20">
            <Label Grid.Column="0" Text="{Binding QuestionNumber, StringFormat='سؤال {0}'}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
            <Label Grid.Column="1" Text="{Binding TimeRemaining, StringFormat='{0}s'}" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource Secondary}" HorizontalOptions="Center"/>
            <Label Grid.Column="2" Text="{Binding MyScore, StringFormat='النقاط: {0}'}" FontSize="18" FontAttributes="Bold" TextColor="{StaticResource Accent}" HorizontalOptions="End"/>
        </Grid>
        
        <!-- Question and Options -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">
                
                <Frame BackgroundColor="{StaticResource Primary}" Padding="25" CornerRadius="15">
                    <Label Text="{Binding CurrentQuestion.TextAr}" FontSize="22" TextColor="White" HorizontalTextAlignment="Center" LineBreakMode="WordWrap"/>
                </Frame>
                
                <CollectionView ItemsSource="{Binding CurrentQuestion.Options}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Button Text="{Binding TextAr}" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GameViewModel}}, Path=SubmitAnswerCommand}"
                                    CommandParameter="{Binding Id}"
                                    BackgroundColor="{StaticResource Surface}" 
                                    TextColor="{StaticResource TextPrimary}" 
                                    FontSize="18" 
                                    Padding="20" 
                                    Margin="0,5" 
                                    CornerRadius="10"
                                    BorderWidth="2"
                                    BorderColor="{StaticResource Primary}"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Leaderboard -->
        <Frame Grid.Row="2" BackgroundColor="{StaticResource Surface}" Padding="15" CornerRadius="10" Margin="0,10,0,0">
            <CollectionView ItemsSource="{Binding Leaderboard}" HeightRequest="100">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10" Padding="5">
                            <Label Text="{Binding DisplayName}" FontSize="14" VerticalOptions="Center"/>
                            <Label Text="{Binding Score}" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" TextColor="{StaticResource Accent}"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>
        
    </Grid>

</ContentPage>
